// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "Devcontainer DE Template",
	"build": {
		// Sets the run context to one level up instead of the .devcontainer folder.
		"context": "..",
		// Update the 'dockerFile' property if you aren't using the standard 'Dockerfile' filename.
		"dockerfile": "../Dockerfile",
		// Set targets to the desired Docker build stages.
		"target": "development",
		"args": {
			// Options arm64 or amd64
			"PLATFORM": "amd64" 
		}
	},
	
	// Set runArgs to mount the SSH agent socket in the container. More info: https://aka.ms/vscode-remote/ssh-auth-sock.
	// 1. Run eval `ssh-agent -s` to start the SSH agent. E.g. eval "$(ssh-agent -s)"
	// 2. Run ssh-add to add your SSH key to the agent. E.g. ssh-add ~/.ssh/id_rsa
	// 3. Run echo $SSH_AUTH_SOCK to get the path to the SSH agent socket.
	// 4. Update the runArgs below with the path to the SSH agent socket.
	"runArgs": [
		"-v", "/tmp/ssh-ivtGpxlgw8mP/agent.2544654:/tmp/ssh-ivtGpxlgw8mP/agent.2544654",
		"-e", "SSH_AUTH_SOCK=/tmp/ssh-ivtGpxlgw8mP/agent.2544654"
	],

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},	

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Uncomment the next line to run commands after the container is created.
	// Add postAttachCommand to add the safe.directory to the git config. More info: https://aka.ms/vscode-remote/containers/advanced-configuration.
	// Change the safe.directory to the path of your workspace.
	"postAttachCommand": "git config --global --add safe.directory /workspaces/devcontainer-de-template",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": { 
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"github.copilot",
				"github.copilot-chat"
			]
		}
	}

	// Uncomment to connect as an existing user other than the container default. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "devcontainer"
}
